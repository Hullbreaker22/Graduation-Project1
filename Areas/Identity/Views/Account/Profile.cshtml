@model ProfileDM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        /* Reset for component isolation */
        .user-profile-component * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .user-profile-component {
            width: 100%;
            max-width: 1000px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            margin: 0 auto;
        }

        .profile-header {
            display: flex;
            padding: 30px;
            background: #f8f9fa;
            border-bottom: 1px solid #eaeaea;
        }

        .profile-photo-container {
            width: 150px;
            height: 150px;
            border-radius: 12px;
            overflow: hidden;
            border: 4px solid white;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            flex-shrink: 0;
        }

        .profile-photo {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .profile-info {
            margin-left: 30px;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .name-display {
            font-size: 28px;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 5px;
        }

        .contact-info {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            margin-top: 15px;
        }

        .contact-item {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #555;
            font-size: 15px;
        }

            .contact-item i {
                color: #6c5ce7;
            }

        .profile-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            padding: 30px;
        }

        @@media (max-width: 768px) {
            .profile-content {
                grid-template-columns: 1fr;
            }
        }

        .profile-section {
            display: flex;
            flex-direction: column;
        }

        .section-title {
            font-size: 18px;
            color: #2c3e50;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #f0f0f0;
            display: flex;
            align-items: center;
        }

            .section-title i {
                margin-right: 10px;
                color: #6c5ce7;
            }

        .input-group {
            margin-bottom: 20px;
        }

            .input-group label {
                display: block;
                margin-bottom: 8px;
                color: #555;
                font-weight: 500;
                font-size: 14px;
            }

        .input-field {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 15px;
            transition: all 0.3s;
        }

            .input-field:focus {
                border-color: #6c5ce7;
                box-shadow: 0 0 0 3px rgba(108, 92, 231, 0.1);
                outline: none;
            }

        .address-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }

        .profile-footer {
            padding: 20px 30px;
            background: #f8f9fa;
            display: flex;
            justify-content: flex-end;
            gap: 15px;
            border-top: 1px solid #eaeaea;
        }

        .btn {
            padding: 12px 25px;
            border: none;
            border-radius: 8px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .btn-confirm {
            background: #6c5ce7;
            color: white;
        }

            .btn-confirm:hover {
                background: #5b4cd6;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(108, 92, 231, 0.3);
            }

        .btn-cancel {
            background: white;
            color: #555;
            border: 1px solid #ddd;
        }

            .btn-cancel:hover {
                background: #f5f5f5;
            }
    </style>
</head>
<body>

    <form asp-action="Profile" asp-controller="Account" asp-area="Identity" method="post" enctype="multipart/form-data">

        <div class="user-profile-component">
            <div class="profile-header">

                <div class="profile-photo-container" id="photoPicker" style="cursor:pointer;">
                    <img id="profileImagePreview" src="~/UserImg/@Model.Image" alt="Profile Photo" class="profile-photo">
                </div>

                <input type="file" id="imageInput" name="Image" accept="image/*" style="display:none;" />

                <div class="profile-info">
                    <h1 class="name-display">@Model.Name</h1>

                    <div class="contact-info">
                        <div class="contact-item">
                            <i class="fas fa-envelope"></i>
                            @Model.Email
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-phone"></i>
                            @Model.PhoneNumber
                        </div>
                    </div>
                </div>
            </div>


            <div class="profile-content">
                <div class="profile-section">
                    <h2 class="section-title"><i class="fas fa-user"></i> Personal Information</h2>

                    <div class="input-group">
                        <label for="firstName">Full Name</label>
                        <input type="text" id="firstName" class="input-field" value="@Model.Name" name="Name">
                    </div>

                    <input type="hidden" name="Id" value="@Model.Id" />


                    <div class="input-group">
                        <label for="firstName">User name </label>
                        <input type="text" id="firstName" class="input-field" value="@Model.UserName" name="UserName">
                    </div>

                    <div class="input-group">
                        <label for="email">Email Address</label>
                        <input type="email" id="email" class="input-field" value="@Model.Email" name="Email">
                    </div>

                    <div class="input-group">
                        <label for="phone">Phone Number</label>
                        <input type="tel" id="phone" class="input-field" value="@Model.PhoneNumber" name="PhoneNumber">
                    </div>
                </div>

                <div class="profile-section">
                    <h2 class="section-title"><i class="fas fa-map-marker-alt"></i> Address Information</h2>

                    <div class="input-group">
                        <label for="street">Street Address</label>
                        <input type="text" id="street" class="input-field" value="@Model.Street" name="Street">
                    </div>

                    <div class="address-row">
                        <div class="input-group">
                            <label for="city">City</label>
                            <input type="text" id="city" class="input-field" value="@Model.City" name="City">
                        </div>

                        <div class="input-group">
                            <label for="state">State</label>
                            <input type="text" id="state" class="input-field" value="@Model.State" name="State">
                        </div>
                    </div>

                    <div class="input-group">
                        <label for="zip">Zip Code</label>
                        <input type="text" id="zip" class="input-field" value="@Model.ZipCode" name="ZipCode">
                    </div>


                    <div class="profile-section">
                        <h2 class="section-title">
                            <i class="fas fa-lock"></i> Change Password
                        </h2>

                        <div class="input-group">
                            <label for="password">New Password</label>
                            <input type="password"
                                   id="password"
                                   class="input-field"
                                   name="Password"
                                   placeholder="Enter new password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="input-group">
                            <label for="confirmPassword">Confirm Password</label>
                            <input type="password"
                                   id="confirmPassword"
                                   class="input-field"
                                   name="ConfirmPassword"
                                   placeholder="Confirm new password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- زرار خاص بتأكيد الباسورد -->
                        <button type="submit"
                                name="action"
                                value="ChangePassword"
                                class="btn btn-confirm"
                                style="align-self:flex-start;">
                            <i class="fas fa-key"></i> Confirm Password
                        </button>
                    </div>



                </div>
            </div>

            <div class="profile-footer">
                <button class="btn btn-cancel">
                    <i class="fas fa-times"></i> Cancel
                </button>

                <!-- ✅ خليته Submit -->
                <button class="btn btn-confirm" id="confirmBtn" type="submit">
                    <i class="fas fa-check"></i> Confirm
                </button>
            </div>
        </div>

    </form> <!-- ← قفل الفورم -->

    <script>
        // نفس السكريبت… لم ألمسه
        document.querySelector('.btn-cancel').addEventListener('click', function() {
            Swal.fire({
                title: 'Changes Discarded',
                text: 'All fields have been reset to their original values.',
                icon: 'info',
                confirmButtonText: 'OK',
                confirmButtonColor: '#6c5ce7'
            });
        });
    </script>
    <script>
        const picker = document.getElementById("photoPicker");
        const inputFile = document.getElementById("imageInput");
        const preview = document.getElementById("profileImagePreview");

        // لما المستخدم يضغط على الصورة → افتح اختيار الملفات
        picker.addEventListener("click", () => {
            inputFile.click();
        });

        // لما يختار صورة → تتعرض فوراً
        inputFile.addEventListener("change", function () {
            const file = this.files[0];
            if (file) {
                preview.src = URL.createObjectURL(file);
            }
        });
    </script>

</body>
</html>
