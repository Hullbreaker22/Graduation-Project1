<main class="dark-theme">
    <div class="container-fluid px-4">
        <ol class="breadcrumb mb-4 shadow-sm p-3 bg-dark-royal rounded">
            <li class="breadcrumb-item active text-white">Dashboard</li>
        </ol>

        <div class="row">
            <!-- Total Flights -->
            <div class="col-xl-3 col-md-6">
                <div class="card bg-dark-royal text-white mb-4 card-hover">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-plane fa-2x"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">@ViewBag.TotalFlights</h5>
                            <small>Total Flights</small>
                        </div>
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="/Customer/Home/Results">View Details</a>
                        <div class="small text-white"><i class="fas fa-arrow-right"></i></div>
                    </div>
                </div>
            </div>

            <!-- Low Seats Flights -->
            <div class="col-xl-3 col-md-6">
                <div class="card bg-dark-warning text-white mb-4 card-hover">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">@ViewBag.LowSeatsFlights</h5>
                            <small>Low Seats Flights</small>
                        </div>
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="/Customer/Home/Results">View Details</a>
                        <div class="small text-white"><i class="fas fa-arrow-right"></i></div>
                    </div>
                </div>
            </div>

            <!-- Full Flights -->
            <div class="col-xl-3 col-md-6">
                <div class="card bg-dark-success text-white mb-4 card-hover">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-check fa-2x"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">@ViewBag.FullFlights</h5>
                            <small>Full Flights</small>
                        </div>
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="/Customer/Home/Results">View Details</a>
                        <div class="small text-white"><i class="fas fa-arrow-right"></i></div>
                    </div>
                </div>
            </div>

            <!-- Upcoming Flights -->
            <div class="col-xl-3 col-md-6">
                <div class="card bg-dark-danger text-white mb-4 card-hover">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">@ViewBag.UpcomingFlights</h5>
                            <small>Upcoming Flights (<1h)</small>
                        </div>
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="/Customer/Home/Results">View Details</a>
                        <div class="small text-white"><i class="fas fa-arrow-right"></i></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts -->
        <div class="row">
            <div class="col-xl-6">
                <div class="card mb-4 shadow-sm bg-dark-card">
                    <div class="card-header bg-dark-royal text-white fw-bold d-flex align-items-center">
                        <i class="fas fa-chart-area me-2"></i>
                        Flight Trends
                    </div>
                    <div class="card-body">
                        <canvas id="myAreaChart" height="40"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-xl-6">
                <div class="card mb-4 shadow-sm bg-dark-card">
                    <div class="card-header bg-dark-royal text-white fw-bold d-flex align-items-center">
                        <i class="fas fa-chart-bar me-2"></i>
                        Flight Distribution
                    </div>
                    <div class="card-body">
                        <canvas id="myBarChart" height="40"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Table -->
        <div class="card mb-4 shadow-sm bg-dark-card">
            <div class="card-header bg-dark-royal text-white fw-bold d-flex align-items-center">
                <i class="fas fa-table me-2"></i> Flights Data
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table id="flightsTable" class="table table-hover table-dark">
                        <thead class="bg-dark-royal text-white">
                            <tr class="text-center">
                                <th>Flight Code</th>
                                <th>Translated Code</th>
                                <th>Duration</th>
                                <th>Leaving Time</th>
                                <th>Arriving Time</th>
                                <th>Leaving Airport</th>
                                <th>Arrive Airport</th>
                                <th>Airline</th>
                                <th>Price</th>
                                <th>Available Seats</th>
                                <th>Stop Points</th>
                                <th>Details</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var flight in ViewBag.Flights as List<Flight>)
                            {
                                <tr class="table-row-hover">
                                    <td>@flight.Flight_Code</td>
                                    <td>@flight.Transate_FlightCode</td>
                                    <td>@flight.Duration</td>
                                    <td>@flight.Leaving_Time.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@flight.Arriving_Time.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@flight.LeavingAirport?.Name</td>
                                    <td>@flight.ArriveAirport?.Name</td>
                                    <td>@flight.AirLine?.Name</td>
                                    <td class="text-success fw-bold">@flight.Price.ToString("C")</td>
                                    <td>
                                        <span class="badge @(flight.AvailableSeats < 10 ? "bg-warning" : "bg-success")">
                                            @flight.AvailableSeats
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@flight.StopPoints</span>
                                    </td>
                                    <td class="text-center">
                                        <a class="btn btn-sm btn-royal text-white fw-bold shadow" style="border-radius: 10px;" href="/Customer/Home/Details/@flight.Flight_Id_PK">
                                            <i class="fas fa-eye me-1"></i>Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <nav class="d-flex justify-content-center mt-4">
                    <ul class="pagination pagination-lg">

                        @if (ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link bg-dark-royal text-white border-0" href="/Admin/Home/Index?page=@(ViewBag.CurrentPage - 1)">
                                    <i class="fas fa-chevron-left me-1"></i>Previous
                                </a>
                            </li>
                        }

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link bg-dark-royal text-white border-0" href="/Admin/Home/Index?page=@i">@i</a>
                            </li>
                        }

                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link bg-dark-royal text-white border-0" href="/Admin/Home/Index?page=@(ViewBag.CurrentPage + 1)">
                                    Next<i class="fas fa-chevron-right ms-1"></i>
                                </a>
                            </li>
                        }

                    </ul>
                </nav>

            </div>
        </div>
    </div>
</main>

