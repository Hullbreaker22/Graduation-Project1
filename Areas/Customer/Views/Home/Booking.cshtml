<style>
    :root {
        --primary: #7c3aed;
        --primary-dark: #6d28d9;
        --primary-light: #c4b5fd;
        --accent: #06d6a0;
        --accent-dark: #05b989;
        --gradient: linear-gradient(135deg, #7c3aed 0%, #06d6a0 100%);
        --gradient-light: linear-gradient(135deg, #a78bfa 0%, #34d399 100%);
        --shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1);
        --shadow-lg: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        --radius: 16px;
    }

    body {
        font-family: 'Inter', 'Segoe UI', sans-serif;
        background: linear-gradient(135deg, #f0f9ff 0%, #fdf2ff 50%, #f0fdf4 100%);
        min-height: 100vh;
        padding: 1.5rem 1rem;
        position: relative;
    }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: radial-gradient(circle at 10% 20%, rgba(124, 58, 237, 0.05) 0%, transparent 20%), radial-gradient(circle at 90% 80%, rgba(6, 214, 160, 0.05) 0%, transparent 20%);
            z-index: -1;
        }

    .review-page {
        min-height: 100vh;
        animation: fadeIn 0.8s ease-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .container-custom {
        max-width: 1280px;
        margin: 0 auto;
    }

    /* Creative Breadcrumb */
    .breadcrumb {
        margin-bottom: 2rem;
        font-size: 0.9rem;
        color: #6b7280;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .breadcrumb-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .breadcrumb-item:not(:last-child)::after {
            content: '›';
            color: #9ca3af;
        }

    .breadcrumb-active {
        color: var(--primary);
        font-weight: 600;
    }

    /* Layout */
    .grid-layout {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    @@media (min-width: 1024px) {
        .grid-layout

    {
        grid-template-columns: 2fr 1fr;
    }

    }

    /* Creative Cards */
    .card {
        background: #ffffff;
        border-radius: var(--radius);
        padding: 2rem;
        box-shadow: var(--shadow);
        border: 1px solid rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: var(--gradient);
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
        }

        .card h2, .card h3 {
            font-weight: 700;
            margin-bottom: 1.5rem;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

    /* Creative Alert Banner */
    .alert-banner {
        background: var(--gradient);
        color: #fff;
        padding: 1.5rem;
        border-radius: var(--radius);
        display: flex;
        gap: 1rem;
        align-items: flex-start;
        box-shadow: var(--shadow);
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

        .alert-banner::after {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
        }

    /* Creative Check Icons */
    .check-icon {
        background-color: #10b981;
        width: 28px;
        height: 28px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-right: 0.5rem;
        flex-shrink: 0;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .check-mark {
        color: #fff;
        font-size: 0.8rem;
        font-weight: bold;
    }

    /* Creative Buttons */
    .btn-primary {
        width: 100%;
        padding: 1rem;
        border-radius: 12px;
        background: var(--gradient);
        color: #fff;
        border: none;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px -1px rgba(124, 58, 237, 0.3);
        position: relative;
        overflow: hidden;
    }

        .btn-primary::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(124, 58, 237, 0.4);
        }

            .btn-primary:hover::before {
                left: 100%;
            }

    .btn-outline {
        padding: 0.7rem 1.5rem;
        border-radius: 50px;
        border: 2px solid var(--primary);
        color: var(--primary);
        background: white;
        transition: all 0.3s ease;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .btn-outline:hover {
            background-color: var(--primary);
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 4px 6px -1px rgba(124, 58, 237, 0.3);
        }

    /* Creative Price Box */
    .price-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1rem;
        font-size: 0.95rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px dashed #e5e7eb;
    }

        .price-row:last-of-type {
            border-bottom: none;
        }

    .price-summary-header {
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: #1f2937;
        position: relative;
        display: inline-block;
    }

        .price-summary-header::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 40px;
            height: 3px;
            background: var(--gradient);
            border-radius: 3px;
        }

    .trip-total {
        font-weight: 700;
        font-size: 1.1rem;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 2px solid #e5e7eb;
    }

        .trip-total span:last-child {
            color: var(--primary);
        }

    /* Creative Sticky Sidebar */
    .sticky-sidebar {
        position: sticky;
        top: 20px;
        transition: all 0.3s ease;
    }

    /* Creative Elements */
    .feature-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        background: var(--gradient-light);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
    }

        .feature-icon i {
            color: white;
            font-size: 1.2rem;
        }

    .highlight-text {
        background: var(--gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: 700;
    }

    /* Creative Divider */
    .divider {
        height: 1px;
        background: linear-gradient(to right, transparent, #e5e7eb, transparent);
        margin: 1.5rem 0;
    }

    /* Animation for cards */
    @@keyframes cardSlideIn {
        from

    {
        opacity: 0;
        transform: translateX(-20px);
    }

    to {
        opacity: 1;
        transform: translateX(0);
    }

    }

    .card:nth-child(1) {
        animation: cardSlideIn 0.5s ease-out;
    }

    .card:nth-child(2) {
        animation: cardSlideIn 0.5s ease-out 0.1s both;
    }

    .card:nth-child(3) {
        animation: cardSlideIn 0.5s ease-out 0.2s both;
    }

    .fare-card {
        padding: 1.5rem;
        border-radius: 12px;
        background: #fff;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .fare-title {
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: #111827;
    }

    .fare-item {
        display: flex;
        align-items: center;
        gap: .6rem;
        margin-bottom: .7rem;
    }

    .fare-item-label {
        color: #374151;
        font-weight: 500;
    }

    .check-icon {
        background-color: #10b981;
        border-radius: 50%;
        padding: 0.25rem;
        width: 1.25rem;
        height: 1.25rem;
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .check-mark {
        color: white;
        font-size: 0.75rem;
        font-weight: bold;
    }

    .x-icon {
        background-color: #ef4444;
    }

    .flight-header {
        display: flex;
        gap: 1rem; /* المسافة بين الأزراير */
        margin-bottom: 1rem;
    }

    .flight-btn {
        padding: 0.45rem 1rem;
        background: #f3f4f6;
        border: 1px solid #d1d5db;
        border-radius: 8px;
        font-size: 0.9rem;
        color: #2563eb;
        font-weight: 500;
        text-decoration: none;
        transition: 0.2s;
    }

        .flight-btn:hover {
            background: #e5e7eb;
            border-color: #9ca3af;
        }

</style>
<div class="review-page">
    <div class="container-custom">

        <!-- Breadcrumb -->
        <div class="breadcrumb">
            @airlineName · @fromCode → @toCode › Review your trip
        </div>

        <div class="grid-layout">

            <!-- LEFT SIDE -->
            <div>

          
                <div class="card">
                    <h2 style="font-size: 1.5rem; font-weight: bold; margin-bottom: 1rem;">@Model.flight.LeavingAirport.city.Name → @Model.flight.ArriveAirport.city.Name  </h2>

                    <p style="color: #374151; margin-bottom: 0.5rem;">
                        @Model.flight.LeavingAirport.Code → @Model.flight.ArriveAirport.Code
                    </p>

                    <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 1rem;">
                        <svg width="16" height="16" fill="none" stroke="#4b5563" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                        </svg>
                        <span style="color: #374151;">@airlineName · @departureTime</span>
                    </div>

                    <span class="badge-co2">Above average CO₂</span>

                    <div class="flight-header">
                        <a href="/Customer/Home/Details/@Model.flight.Flight_Id_PK" class="flight-btn">Flight details</a>
                        <a href="/Customer/Home/Results" class="flight-btn">Change flight</a>
                    </div>

                </div>

       
                <!-- Seats -->
                <div class="card fare-card">
                    <h3 class="fare-title">Fare Details</h3>

                    <!-- Cabin Class -->
                    <div class="fare-item">
                        <div class="check-icon"><span class="check-mark">✓</span></div>
                        <span class="fare-item-label">
                            Cabin Class: @Model.fare!.CabinClass.ToString().Replace("_", " ")
                        </span>
                    </div>

                    <!-- Price -->
                    <div class="fare-item">
                        <div class="check-icon"><span class="check-mark">✓</span></div>
                        <span class="fare-item-label">
                            Base Price: @Model.fare!.Price.ToString("C")
                        </span>
                    </div>

                    <!-- Taxes -->
                    <div class="fare-item">
                        <div class="check-icon"><span class="check-mark">✓</span></div>
                        <span class="fare-item-label">
                            Taxes: @Model.fare!.Taxes.ToString("C")
                        </span>
                    </div>

                    <!-- Fees -->
                    <div class="fare-item">
                        <div class="check-icon"><span class="check-mark">✓</span></div>
                        <span class="fare-item-label">
                            Fees: @Model.fare!.Fees.ToString("C")
                        </span>
                    </div>

                    <!-- Refundable -->
                    <div class="fare-item">
                        <div class="check-icon @(Model.fare!.Refundable ? "" : "x-icon")">
                            <span class="check-mark">@((Model.fare!.Refundable ? "✓" : "✗"))</span>
                        </div>

                        <span class="fare-item-label">
                            Refundable: @(Model.fare!.Refundable ? "Yes" : "No")

                            @if (!Model.fare!.Refundable)
                            {
                                <span> — Fee: @Model.fare!.RefundFee.ToString("C")</span>
                            }
                        </span>
                    </div>

                    <!-- Changeable -->
                    <div class="fare-item">
                        <div class="check-icon @(Model.fare!.Changeable ? "" : "x-icon")">
                            <span class="check-mark">@((Model.fare!.Changeable ? "✓" : "✗"))</span>
                        </div>

                        <span class="fare-item-label">
                            Changeable: @(Model.fare!.Changeable ? "Available" : "Not-Available")

                            @if (!Model.fare!.Changeable)
                            {
                                <span> — Fee: @Model.fare!.ChangeFee.ToString("C")</span>
                            }
                        </span>
                    </div>

                    <!-- Baggage -->
                    <div class="fare-item">
                        <div class="check-icon"><span class="check-mark">✓</span></div>
                        <span class="fare-item-label">
                            Baggage Allowance: @Model.fare!.Baggage_Allowance
                        </span>
                    </div>

                    <!-- Seat Selection -->
                    <div class="fare-item">
                        <div class="check-icon @(Model.fare!.Seat_Selection ? "" : "x-icon")">
                            <span class="check-mark">@((Model.fare!.Seat_Selection ? "✓" : "✗"))</span>
                        </div>
                        <span class="fare-item-label">
                            Seat Selection: @(Model.fare!.Seat_Selection ? "Available" : "Not Available")
                        </span>
                    </div>

                </div>


                @* <div class="card">
                    <h3 style="font-size: 1.25rem; font-weight: bold; margin-bottom: 1rem;">Seats</h3>

                    <div class="benefit-item" style="margin-bottom: 1rem;">
                        <div class="check-icon">
                            <span class="check-mark">✓</span>
                        </div>
                        <span style="color: #374151;">Seat choice included</span>
                    </div>

                    <button class="btn-outline">Choose your seats</button>
                </div> *@

            </div>

            <!-- RIGHT SIDE -->
            <div>
                <div class="card sticky-sidebar">

                    <h3 class="price-summary-header">Price summary</h3>

                    <div class="price-row">
                        <span>Traveler 1: Adult</span>
                        <span style="font-weight: 600;">$@totalPrice.ToString("N2")</span>
                    </div>

                    <div class="price-row">
                        <span>Flight</span>
                        <span>$@flightPrice.ToString("N2")</span>
                    </div>

                    <div class="price-row">
                        <span>Taxes, fees, and charges</span>
                        <span>$@taxes.ToString("N2")</span>
                    </div>


                    <div class="trip-total" style="display:flex;justify-content:space-between;">
                        <span style="font-size: 1.25rem; font-weight: bold;">Trip total</span>
                        <span style="font-size: 1.5rem; font-weight: bold;">$@totalPrice.ToString("N2")</span>
                    </div>

                    <p style="font-size: 0.75rem; color: #6b7280;">
                        Rates are quoted in US dollars
                    </p>

                    <button class="btn-primary" type="button"
                            onclick="window.location.href='/Customer/Home/Checkout?flightId=@Model.flight.Flight_Id_PK&fareId=@Model.fare.Id';">
                        Check out
                    </button>

                    <p style="font-size: 0.75rem; color: #4b5563; margin-top: 1rem;">
                        Your selected fare is refundable. Some taxes may not be refunded.
                    </p>

                    <!-- Cancellation -->
                    <div class="cancellation-box">
                        <div class="icon-box">
                            <svg width="20" height="20" fill="none" stroke="#2563eb" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>

                        <div>
                            <h4 style="font-weight: 600;">Free cancellation</h4>
                            <p style="font-size: 0.875rem; color: #4b5563;">
                                Cancel within 24 hours at no fee.
                            </p>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
