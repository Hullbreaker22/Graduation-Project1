<div class="container d-flex justify-content-center align-items-center"
     style="min-height:80vh">

    <div class="card shadow-lg border-0 text-center p-5"
         style="max-width:520px; border-radius:20px">

        <div class="mb-4">
            <div style="
                width:100px;
                height:100px;
                margin:auto;
                border-radius:50%;
                background:linear-gradient(135deg,#10b981,#059669);
                display:flex;
                align-items:center;
                justify-content:center;
                box-shadow:0 0 0 0 rgba(16,185,129,.4);
                animation:pulse 2s infinite;
            ">
                <i class="fas fa-check text-white" style="font-size:42px"></i>
            </div>
        </div>

        <h2 class="fw-bold text-success mb-3">
            Payment Successful
        </h2>

        <p class="text-muted mb-4" style="font-size:1.1rem">
            Your payment has been processed successfully.
            Your booking is now confirmed.
        </p>

        <div class="d-grid gap-3">
            <a href="/Customer/Home/MyBooking"
               class="btn btn-success btn-lg rounded-pill">
                View My Bookings
            </a>

            <a href="/Customer/Home/Index"
               class="btn btn-outline-primary btn-lg rounded-pill">
                Back to Home
            </a>
        </div>

        <p class="text-secondary mt-4" style="font-size:.95rem">
            Redirecting automatically in
            <strong><span id="counter">5</span></strong> seconds
        </p>

    </div>
</div>

<script>
    let counter = 120; 
    const el = document.getElementById("counter");

    const timer = setInterval(() => {
        counter--;
        el.textContent = counter;

        if (counter <= 0) {
            clearInterval(timer);
            window.location.href = "@Url.Action("Index", "Home", new { area = "Customer" })";
        }
    }, 1000);
</script>

<style>
    @@keyframes pulse {
        0%

    {
        box-shadow: 0 0 0 0 rgba(16,185,129,.4);
    }

    70% {
        box-shadow: 0 0 0 25px rgba(16,185,129,0);
    }

    100% {
        box-shadow: 0 0 0 0 rgba(16,185,129,0);
    }

    }
</style>
